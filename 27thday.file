<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD in JS</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: grid;
            grid-template-columns: 1fr;
            gap: 10px;
            margin-bottom: 20px;
        }

        input,
        select,
        button {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            background-color: orange;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: darkorange;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        thead {
            background-color: #f2f2f2;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .actions {
            display: flex;
            justify-content: center;
            gap: 5px;
        }

        .actions button {
            background-color: transparent;
            border: none;
            cursor: pointer;
        }

        .actions .edit {
            color: blue;
        }

        .actions .delete {
            color: red;
        }
    </style>

</head>

<body>
    <div class="container">
        <h2>CRUD in JS</h2>
        <form id="userForm">
            <input type="text" id="name" placeholder="Enter your name" required>
            <input type="number" id="age" placeholder="Enter your age" required>
            <input type="text" id="phone" placeholder="Enter your phone" required>
            <input type="email" id="email" placeholder="Enter your email" required>
            <div>
                <input type="radio" id="male" name="gender" value="Male" required> Male
                <input type="radio" id="female" name="gender" value="Female"> Female
                <input type="radio" id="other" name="gender" value="Other"> Other
            </div>
            <select id="hometown" required>
                <option value="" disabled selected>Select Hometown</option>
                <option value="Kota">Kota</option>
                <option value="Ajmer">Ajmer</option>
                <option value="Jaipur">Jaipur</option>
                <option value="Delhi">Delhi</option>
               
            </select>
            <button type="submit">Submit</button>
        </form>
        <table id="userTable">
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Hometown</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
          
            </tbody>
        </table>
    </div>
    <script>
        document.getElementById('userForm').addEventListener('submit', function (event) {
            event.preventDefault();

            const name = document.getElementById('name').value;
            const age = document.getElementById('age').value;
            const phone = document.getElementById('phone').value;
            const email = document.getElementById('email').value;
            const gender = document.querySelector('input[name="gender"]:checked').value;
            const hometown = document.getElementById('hometown').value;

            const table = document.getElementById('userTable').getElementsByTagName('tbody')[0];
            const editingRow = document.getElementById('editingRow');

            if (editingRow) {
                editingRow.cells[1].innerHTML = name;
                editingRow.cells[2].innerHTML = age;
                editingRow.cells[3].innerHTML = phone;
                editingRow.cells[4].innerHTML = email;
                editingRow.cells[5].innerHTML = gender;
                editingRow.cells[6].innerHTML = hometown;
                editingRow.removeAttribute('id');
            } else {
                const newRow = table.insertRow();

                const cell1 = newRow.insertCell(0);
                const cell2 = newRow.insertCell(1);
                const cell3 = newRow.insertCell(2);
                const cell4 = newRow.insertCell(3);
                const cell5 = newRow.insertCell(4);
                const cell6 = newRow.insertCell(5);
                const cell7 = newRow.insertCell(6);
                const cell8 = newRow.insertCell(7);

                const rowCount = table.rows.length;

                cell1.innerHTML = rowCount;
                cell2.innerHTML = name;
                cell3.innerHTML = age;
                cell4.innerHTML = phone;
                cell5.innerHTML = email;
                cell6.innerHTML = gender;
                cell7.innerHTML = hometown;
                cell8.innerHTML = '<div class="actions"><button class="edit">‚úè</button> <button class="delete">üóë</button></div>';
            }

            document.getElementById('userForm').reset();
        });

        document.getElementById('userTable').addEventListener('click', function (event) {
            const target = event.target;

            if (target.classList.contains('delete')) {
                const row = target.closest('tr');
                row.parentElement.removeChild(row);
                updateSerialNumbers();
            }

            if (target.classList.contains('edit')) {
                const row = target.closest('tr');
                const cells = row.getElementsByTagName('td');

                document.getElementById('name').value = cells[1].innerHTML;
                document.getElementById('age').value = cells[2].innerHTML;
                document.getElementById('phone').value = cells[3].innerHTML;
                document.getElementById('email').value = cells[4].innerHTML;

                const genderValue = cells[5].innerHTML;
                document.querySelector(input[name="gender"][value="${genderValue}"]).checked = true;

                document.getElementById('hometown').value = cells[6].innerHTML;

                row.id = 'editingRow';
            }
        });

        function updateSerialNumbers() {
            const rows = document.getElementById('userTable').getElementsByTagName('tbody')[0].rows;
            for (let i = 0; i < rows.length; i++) {
                rows[i].cells[0].innerHTML = i + 1;
            }
        }


    </script>
</body>

</html>
